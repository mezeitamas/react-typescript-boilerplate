{
    "name": "react-typescript-boilerplate",
    "version": "2.0.0",
    "license": "MIT",
    "private": true,
    "author": "Tamas Mezei",
    "repository": {
        "type": "git",
        "url": "git@github.com:mezeitamas/react-typescript-boilerplate.git"
    },
    "engines": {
        "node": ">=22.7.0",
        "npm": ">=10.8.2"
    },
    "scripts": {
        "install:playwright": "playwright install --with-deps",
        "clean": "rimraf dist/ reports/",
        "format:check": "prettier '**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}' --check",
        "format:fix": "prettier '**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}' --write",
        "lint:check": "eslint 'src/**/*.{ts,tsx}'",
        "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
        "type:check": "tsc --noEmit",
        "test:unit:check": "jest",
        "test:unit:update": "jest --updateSnapshot",
        "test:e2e:check": "playwright test",
        "test:e2e:update": "playwright test --update-snapshots",
        "audit:check": "npm audit --package-lock-only --omit=dev",
        "build": "rspack --config rspack.config.js",
        "serve": "http-server ./dist/bundle/ --port 8080",
        "start": "rspack serve --config rspack.serve.config.js"
    },
    "dependencies": {
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-router-dom": "6.26.1",
        "web-vitals": "4.2.3"
    },
    "devDependencies": {
        "@axe-core/playwright": "4.10.0",
        "@babel/cli": "7.24.8",
        "@babel/core": "7.25.2",
        "@babel/preset-env": "7.25.4",
        "@babel/preset-react": "7.24.7",
        "@babel/preset-typescript": "7.24.7",
        "@playwright/test": "1.46.1",
        "@rspack/cli": "1.0.0",
        "@rspack/core": "1.0.0",
        "@types/http-server": "0.12.4",
        "@types/jest": "29.5.12",
        "@types/react": "18.3.4",
        "@types/react-dom": "18.3.0",
        "@types/react-test-renderer": "18.3.0",
        "@typescript-eslint/eslint-plugin": "8.3.0",
        "@typescript-eslint/parser": "8.3.0",
        "babel-loader": "9.1.3",
        "dotenv": "16.4.5",
        "eslint": "8.57.0",
        "eslint-import-resolver-typescript": "3.6.3",
        "eslint-plugin-babel": "5.3.1",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-jest": "28.8.0",
        "eslint-plugin-jsx-a11y": "6.9.0",
        "eslint-plugin-react": "7.35.0",
        "eslint-plugin-react-hooks": "4.6.2",
        "eslint-plugin-testing-library": "6.3.0",
        "http-server": "14.1.1",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "prettier": "3.3.3",
        "react-shallow-renderer": "16.15.0",
        "react-test-renderer": "18.3.1",
        "rimraf": "6.0.1",
        "typescript": "5.5.4",
        "webpack-bundle-analyzer": "4.10.2",
        "webpack-merge": "6.0.1"
    }
}
