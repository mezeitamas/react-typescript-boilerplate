{
    "name": "react-typescript-boilerplate",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "author": "Tamas Mezei",
    "repository": {
        "type": "git",
        "url": "git@github.com:mezeitamas/react-typescript-boilerplate.git"
    },
    "scripts": {
        "install:playwright": "playwright install --with-deps",
        "clean": "rimraf dist/ reports/",
        "format:check": "prettier '**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}' --check",
        "format:fix": "prettier '**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}' --write",
        "lint:check": "eslint '**/*.{js,jsx,ts,tsx}'",
        "lint:fix": "eslint --fix '**/*.{js,jsx,ts,tsx}'",
        "type:check": "tsc --noEmit",
        "test:unit:check": "jest",
        "test:unit:update": "jest --updateSnapshot",
        "test:e2e:check": "playwright test",
        "test:e2e:update": "playwright test --update-snapshots",
        "audit:check": "npm audit --package-lock-only --omit=dev",
        "build": "webpack --config webpack.config.js",
        "serve": "http-server ./dist/bundle/ --port 8080",
        "start": "webpack serve --config webpack.serve.config.js"
    },
    "engines": {
        "node": ">=22.1.0",
        "npm": ">=10.7.0"
    },
    "dependencies": {
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-router-dom": "6.23.0",
        "web-vitals": "3.5.2"
    },
    "devDependencies": {
        "@axe-core/playwright": "4.9.0",
        "@babel/cli": "7.24.5",
        "@babel/core": "7.24.5",
        "@babel/preset-env": "7.24.5",
        "@babel/preset-react": "7.24.1",
        "@babel/preset-typescript": "7.24.1",
        "@playwright/test": "1.43.1",
        "@types/http-server": "0.12.4",
        "@types/jest": "29.5.12",
        "@types/react": "18.3.1",
        "@types/react-dom": "18.3.0",
        "@types/react-test-renderer": "18.3.0",
        "@typescript-eslint/eslint-plugin": "7.8.0",
        "@typescript-eslint/parser": "7.8.0",
        "babel-loader": "9.1.3",
        "circular-dependency-plugin": "5.2.2",
        "dotenv": "16.4.5",
        "eslint": "8.57.0",
        "eslint-import-resolver-typescript": "3.6.1",
        "eslint-plugin-babel": "5.3.1",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-jest": "28.3.0",
        "eslint-plugin-jsx-a11y": "6.8.0",
        "eslint-plugin-react": "7.34.1",
        "eslint-plugin-react-hooks": "4.6.2",
        "eslint-plugin-testing-library": "6.2.2",
        "html-webpack-plugin": "5.6.0",
        "http-server": "14.1.1",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "prettier": "3.2.5",
        "react-shallow-renderer": "16.15.0",
        "react-test-renderer": "18.3.1",
        "rimraf": "5.0.5",
        "typescript": "5.4.5",
        "webpack": "5.91.0",
        "webpack-bundle-analyzer": "4.10.2",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "5.0.4",
        "webpack-merge": "5.10.0",
        "webpack-subresource-integrity": "5.1.0"
    }
}
