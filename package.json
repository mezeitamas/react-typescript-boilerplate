{
    "name": "react-typescript-boilerplate",
    "version": "3.0.0",
    "license": "MIT",
    "private": true,
    "type": "module",
    "author": "Tamas Mezei",
    "repository": {
        "type": "git",
        "url": "git@github.com:mezeitamas/react-typescript-boilerplate.git"
    },
    "engines": {
        "node": ">=24.9.0",
        "npm": ">=11.6.0"
    },
    "scripts": {
        "install:playwright": "playwright install --with-deps",
        "clean": "rimraf dist/ reports/",
        "format:check": "prettier '**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}' --check",
        "format:fix": "prettier '**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}' --write",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "type:check": "tsc --noEmit",
        "test:unit:check": "rstest",
        "test:unit:update": "rstest --update",
        "test:e2e:check": "playwright test",
        "test:e2e:update": "playwright test --update-snapshots",
        "audit:check": "npm audit --package-lock-only --omit=dev",
        "build": "rsbuild build",
        "serve": "rsbuild preview",
        "start": "rsbuild dev"
    },
    "dependencies": {
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "react-router-dom": "7.9.4",
        "web-vitals": "5.1.0"
    },
    "devDependencies": {
        "@axe-core/playwright": "4.10.2",
        "@eslint/js": "9.37.0",
        "@playwright/test": "1.56.0",
        "@rsbuild/core": "1.5.16",
        "@rsbuild/plugin-react": "1.4.1",
        "@rsbuild/plugin-svgr": "1.2.2",
        "@rsdoctor/rspack-plugin": "1.3.1",
        "@rstest/core": "0.5.1",
        "@rstest/coverage-istanbul": "0.0.3",
        "@tailwindcss/postcss": "4.1.14",
        "@testing-library/jest-dom": "6.9.1",
        "@testing-library/react": "16.3.0",
        "@types/react": "19.2.2",
        "@types/react-dom": "19.2.1",
        "dotenv": "17.2.3",
        "eslint": "9.37.0",
        "eslint-plugin-react": "7.37.5",
        "jsdom": "27.0.0",
        "postcss": "8.5.6",
        "postcss-loader": "8.2.0",
        "prettier": "3.6.2",
        "rimraf": "6.0.1",
        "tailwindcss": "4.1.14",
        "typescript": "5.9.3",
        "typescript-eslint": "8.46.0"
    }
}
